<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/line_number"
        android:gravity="start"
        android:padding="3dp"
        android:text="@string/u1"
        android:textAppearance="?attr/textAppearanceSubtitle2" />

    <TextView
        android:id="@+id/name"
        android:gravity="start"
        android:padding="3dp"
        android:text="@string/reumannplatz"
        android:textAppearance="?attr/textAppearanceSubtitle2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/favour"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="@dimen/entry_size"
        android:layout_height="@dimen/entry_size"
        android:layout_gravity="end"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_star_border_24dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@android:color/black" />
</TableRow>